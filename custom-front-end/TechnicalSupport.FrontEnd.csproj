<Project Sdk="h5.Target/25.11.62725">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.2</LangVersion> <!-- H5 compiler supports C# 7.2 -->
    <NoWarn>1998</NoWarn>          <!-- Disable warning for async method without any await -->
    <DebugType>None</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <DefineConstants>H5</DefineConstants>
  </PropertyGroup>


  <!-- Don't forget  to perform a NuGet packages update to fetch the latest versions! -->
  <ItemGroup>
    <PackageReference Include="h5" Version="26.2.64514" />
    <PackageReference Include="h5.core" Version="26.2.64455" />
    <PackageReference Include="h5.Newtonsoft.Json" Version="26.2.64456" />
    <PackageReference Include="Plotly.H5" Version="2025.9.61626" />
    <PackageReference Include="Tesserae" Version="2026.2.64600" />
    <PackageReference Include="Mosaik.FrontEnd.API" Version="26.2.64637" />
    <PackageReference Include="Mosaik.FrontEnd.Core" Version="26.2.64637" />
    <PackageReference Include="Mosaik.FrontEnd.Admin" Version="26.2.64637" />
    <PackageReference Include="Mosaik.FrontEnd" Version="26.2.64637" />
  </ItemGroup>
  <ItemGroup>
    <None Update="h5\assets\css\support-style.css">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

